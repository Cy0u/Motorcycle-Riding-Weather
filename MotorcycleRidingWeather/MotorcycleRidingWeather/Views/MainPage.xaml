<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MotorcycleRidingWeather"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:controls="clr-namespace:MotorcycleRidingWeather.Controls;assembly=MotorcycleRidingWeather"
    ios:Page.UseSafeArea="true"
    BackgroundColor="#90a4ae"
    x:Class="MotorcycleRidingWeather.Views.MainPage">
    <StackLayout>
        <Grid
            RowSpacing="0"
            BackgroundColor="#90a4ae">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="2*" />
                <ColumnDefinition
                    Width="3*" />
                <ColumnDefinition
                    Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="50" />
                <RowDefinition
                    Height="1" />
                <RowDefinition
                    Height="250" />
            </Grid.RowDefinitions>
            <Label
                Grid.Column="1"
                Grid.Row="0"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontAttributes="Bold"
                FontSize="20"
                TextColor="White"
                Text="{Binding Title}" />
            <Button
                Grid.Column="2"
                Grid.Row="0"
                Text="Settings"
                FontAttributes="Bold"
                Margin="0,0,5,0"
                HorizontalOptions="EndAndExpand"
                VerticalOptions="Center"
                TextColor="White"
                BackgroundColor="Transparent"
                Command="{Binding NavigateToSettingsPage}" />
            <BoxView
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="10,0"
                BackgroundColor="#37474f" />
            <Grid
                Grid.Row="2"
                Grid.Column="0"
                Padding="0,3,0,0"
                Grid.ColumnSpan="3"
                BackgroundColor="#90a4ae">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    x:Name="CurrentDate"
                    TextColor="White"
                    FontSize="Large"
                    Margin="5,0,0,0"
                    Text="{Binding TodayWeather.CurrentDayLabelText}" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    x:Name="HighLowTemp"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="65"
                    Text="{Binding TodayWeather.HighLowFormattedText}" />
                <StackLayout
                    Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Spacing="30">
                    <StackLayout
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Image
                            Source="umbrella32.png" />
                        <Label
                            Text="{Binding TodayWeather.PrecipitationString}" />
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Image
                            Source="cloud32.png" />
                        <Label
                            Text="{Binding TodayWeather.CloudCoverString}" />
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Image
                            Source="wind32.png" />
                        <Label
                            Text="{Binding Path=TodayWeather.WindSpeed, StringFormat='{0:0} m/s'}" />
                    </StackLayout>
                </StackLayout>
                <StackLayout
                    IsVisible="{Binding TodayWeather.IsGoodRidingDay}"
                    Orientation="Horizontal"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Grid.Row="3">
                    <Image
                        Source="bike.png" />
                    <Label
                        TextColor="White"
                        Font="Large"
                        VerticalOptions="Center"
                        Text="Today is a good day to ride!" />
                </StackLayout>
                <StackLayout
                    IsVisible="{Binding TodayWeather.IsBadRidingDay}"
                    Orientation="Horizontal"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Grid.Row="3">
                    <Image
                        Source="car.png" />
                    <Label
                        TextColor="White"
                        Font="Large"
                        VerticalOptions="Center"
                        Text="Looks like a car driving day :(" />
                </StackLayout>
            </Grid>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="100" />
            </Grid.RowDefinitions>
            <ListView
                Grid.Row="0"
                ItemsSource="{Binding WeatherDisplayInformation}"
                HasUnevenRows="true"
                SeparatorColor="Gray"
                IsRefreshing="{Binding IsRefreshActive}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid
                                RowSpacing="1"
                                Padding="5,5"
                                BackgroundColor="{Binding BackgroundColorBasedOnWeather}">
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        Width="Auto" />
                                    <ColumnDefinition
                                        Width="Auto" />
                                    <ColumnDefinition
                                        Width="Auto" />
                                    <ColumnDefinition
                                        Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackLayout
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    VerticalOptions="Center">
                                    <Image
                                        Source="bike.png"
                                        IsVisible="{Binding IsGoodRidingDay}" />
                                    <Image
                                        Source="car.png"
                                        IsVisible="{Binding IsBadRidingDay}" />
                                </StackLayout>
                                <StackLayout
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <Label
                                        x:Name="DateLabel"
                                        TextColor="White"
                                        Text="{Binding StructuredTime}"
                                        FontSize="24" />
                                </StackLayout>
                                <StackLayout
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Grid.RowSpan="2"
                                    Grid.ColumnSpan="2"
                                    Padding="0,0,5,0"
                                    Orientation="Vertical"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalOptions="Center">
                                    <Label
                                        x:Name="Temperature"
                                        VerticalOptions="Center"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        VerticalTextAlignment="Center"
                                        HorizontalOptions="End"
                                        Text="{Binding HighLowFormattedText}"
                                        FontSize="25" />
                                </StackLayout>
                                <StackLayout
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2">
                                    <StackLayout
                                        Orientation="Horizontal">
                                        <Image
                                            Source="umbrella.png" />
                                        <Label
                                            x:Name="PrecipitationPercentage"
                                            VerticalOptions="Center"
                                            TextColor="White"
                                            Text="{Binding Path=PrecipitationString}"
                                            Margin="0,0,5,0"
                                            FontSize="Medium" />
                                        <Image
                                            Source="cloud.png" />
                                        <Label
                                            x:Name="CloudCoverPercentage"
                                            VerticalOptions="Center"
                                            TextColor="White"
                                            Text="{Binding Path=CloudCoverString}"
                                            Margin="0,0,5,0"
                                            FontSize="Medium" />
                                        <Image
                                            Source="wind.png" />
                                        <Label
                                            x:Name="Wind"
                                            VerticalOptions="Center"
                                            Margin="0,0,5,0"
                                            TextColor="White"
                                            Text="{Binding Path=WindSpeed, StringFormat='{0:0} m/s'}"
                                            FontSize="Medium" />
                                    </StackLayout>
                                </StackLayout>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <local:AdMobView
                AdUnitId="{Binding AddUnitId}"
                Grid.Row="1" />
        </Grid>
    </StackLayout>
</ContentPage>