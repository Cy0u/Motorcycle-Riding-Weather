<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MotorcycleRidingWeather.Views.MainPage"
    Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Settings"
            Command="{Binding NavigateToSettingsPage}" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <ListView
            ItemsSource="{Binding WeatherDisplayInformation}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout
                            BackgroundColor="{Binding BackgroundColorBasedOnWeather}"
                            Orientation="Horizontal">
                            <Image
                                Source="bike.png"
                                IsVisible="{Binding IsGoodRidingDay}" />
                            <Image
                                Source="car.png"
                                IsVisible="{Binding IsBadRidingDay}" />
                            <Label
                                x:Name="MinTemperature"
                                VerticalOptions="Center"
                                Text="{Binding Path=LowTemperature, StringFormat='Low:{0}'}" />
                            <Label
                                x:Name="MaxTemperature"
                                VerticalOptions="Center"
                                Text="{Binding Path=HighTemperature, StringFormat='High:{0}'}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>