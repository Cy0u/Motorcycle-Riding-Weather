<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MotorcycleRidingWeather.Views.MainPage"
    Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Settings" 
            Command="{Binding NavigateToSettingsPage}"/>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <ListView
            ItemsSource="{Binding WeatherCollection}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout
                            BackgroundColor="{Binding TempColor}"
                            Orientation="Horizontal">
                            <Label
                                x:Name="Temperature"
                                Text="{Binding Main.Temp}" />
                            <Label
                                x:Name="DateTimeAsString"
                                Text="{Binding DateTimeAsString}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>