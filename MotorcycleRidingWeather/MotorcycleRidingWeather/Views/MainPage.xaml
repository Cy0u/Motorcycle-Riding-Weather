<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MotorcycleRidingWeather.Views.MainPage"
    Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Settings"
            Command="{Binding NavigateToSettingsPage}" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <ListView
            ItemsSource="{Binding WeatherDisplayInformation}"
            HasUnevenRows="true">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid
                            Padding="0,5"
                            BackgroundColor="{Binding BackgroundColorBasedOnWeather}">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition
                                    Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackLayout
                                Grid.Column="0"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                VerticalOptions="Center">
                                <Image
                                    Source="bike.png"
                                    IsVisible="{Binding IsGoodRidingDay}" />
                                <Image
                                    Source="car.png"
                                    IsVisible="{Binding IsBadRidingDay}" />
                            </StackLayout>
                            <StackLayout
                                Grid.Row="0"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <Label
                                    x:Name="DateLabel"
                                    Text="{Binding StructuredTime}"
                                    FontSize="30" />
                            </StackLayout>
                            <StackLayout
                                Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <Label
                                    x:Name="MinTemperature"
                                    VerticalOptions="Center"
                                    Text="{Binding Path=LowTemperature, StringFormat='Low:{0}'}"
                                    FontSize="Large" />
                                <Label
                                    x:Name="MaxTemperature"
                                    VerticalOptions="Center"
                                    Text="{Binding Path=HighTemperature, StringFormat='High:{0}'}"
                                    FontSize="Large" />
                                <Label
                                    x:Name="PrecipitationPercentage"
                                    VerticalOptions="Center"
                                    Text="{Binding Path=PrecipitationProbability, StringFormat='Precip:{0}%'}"
                                    FontSize="Large" />
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>